@model List<WebAppEsame1.Models.Product>


<h2>Aggiungi un Nuovo Prodotto</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" required />
    </div>

    <div class="form-group">
        <label for="Prezzo">Prezzo</label>
        <input type="number" class="form-control" id="Prezzo" name="Prezzo" required />
    </div>

    <div class="form-group">
        <label for="Descrizione">Descrizione</label>
        <textarea class="form-control" id="Descrizione" name="Descrizione" rows="3" required></textarea>
    </div>

    <div class="form-group">
        <label for="Immagine_Copertina">Immagine di Copertina</label>
        <input type="file" class="form-control-file" id="Immagine_Copertina" name="Immagine_Copertina" required />
    </div>

    <div class="form-group">
        <label for="Immagine1">Immagine 1</label>
        <input type="file" class="form-control-file" id="Immagine1" name="Immagine1" />
    </div>

    <div class="form-group">
        <label for="Immagine2">Immagine 2</label>
        <input type="file" class="form-control-file" id="Immagine2" name="Immagine2" />
    </div>

    <button type="submit" class="btn btn-primary">Aggiungi Prodotto</button>
</form>



