@model List<WebAppEsame1.Models.Product>


@{
	ViewData["Title"] = "Vetrina Scarpe";
}

<h2 class="text-center mt-4">Vetrina Scarpe</h2>

<div class="container">
    <div class="row">
        @foreach (var scarpa in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@scarpa.Immagine_Copertina" class="card-img-top" alt="@scarpa.Nome">
                    <div class="card-body text-center">
                        <h5 class="card-title">@scarpa.Nome</h5>
                        <p class="card-text">Prezzo:@scarpa.Prezzo €</p>
                        <a href="@Url.Action("Dettaglio", "Product", new { id = scarpa.Id })" class="btn btn-primary">Vedi Dettagli</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

